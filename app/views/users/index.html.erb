  <div class='container px-5 px-sm-0'></div>

   <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
        <tr>
        <th> name </th>
        <th><%= @user.name %></th>
        </tr>
        <tr>
        <th> introduction </th>
        <th></th>
        </tr>
      </table>

      <div class='row'>
        <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block edit_user" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

          <h2 class = "mt-3">New book</h2>

          <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>

        <tbody>
          <%= form_with model: Book.new do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
          <% end %>
        </div>
        <div class='col-md-8 offset-md-1'>
          <h2>Users</h2>
          <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag 'default-image.jpg' %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show" , user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
          </table>
        </div>
  </div>

