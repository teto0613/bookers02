 <p id="notice"></p>
        <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div class="form-group">
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  </div>
  <div class="form-group">
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "I", accept: "image/*" %>
  </div>
  <div class="form-group">
  <label for="inputIntroduction">Iutroduction</label>
  <textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>

  <%= f.submit "Update User" %>
<% end %>
