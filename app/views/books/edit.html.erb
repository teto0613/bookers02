<p id="notice"></p>
 <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>
<%= form_with model: @book,url: book_path(@book.id) do |f| %>
  <div class="form-group">
  <label for="inputName">Title</label>
  <input class="form-control book_title" type="text" value="1" name="book[title]" id="book_title" />
  </div>
  <div class="form-group">
  <label for="inputImage">Opinion</label>
  <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
  </div>
  <%= f.submit "Update book" %><br>
  <%= link_to "Show", book_path %> |
  <%= link_to "Back", books_path %>
    </div>
  </div>
<% end %>